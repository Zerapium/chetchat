doctype html
head
  title Real Time Chat
  link(rel="stylesheet", href="/components/bootstrap/dist/css/bootstrap.min.css")
  link(rel="stylesheet", href="/css/style.css")
  script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js")
  script(src="/components/bootstrap/dist/js/bootstrap.min.js")
  script(src="/js/main.js")
  script(src="/socket.io/socket.io.js")
body
  nav.navbar.navbar-inverse
    .container
      .navbar-header
      a.navbar-brand(href="/") ChetChat
  .container
    .row
      .col-md-8
        #error
        #userFormWrap
          h1 Create Username
          form#userForm
            input#username.form-control(type="text", placeholder="Enter Username...")
            br
            button.btn.btn-primary(type="submit") Submit
            br
            br
        #mainWrap
          h1 Speak your Mind
          form#chatForm
            .form-group
              textarea#chatInput.form-control(name="body", placeholder="Say Something")
              br
              button.btn.btn-primary(type="submit") Submit
              br
              br
            #chatWindow.well
      .col-md-4
        h3 Chat Users
        ul.list-group
          #users